@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>


<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add New Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th></th>
            @* <th>RegionImageUrl</th> *@
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            foreach (var region in Model)
            {
                <tr>
                    <td>@region.Id</td>
                    <td>@region.Name</td>
                    <td>@region.Code</td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>

