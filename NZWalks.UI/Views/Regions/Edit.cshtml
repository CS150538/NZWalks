@model NZWalks.UI.Models.DTO.RegionDto;

<h1>Edit Region</h1>

@* <p>@ViewBag.Id</p> *@

@if(Model is not null)
{
    <form method="post" class="mt-3">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Region Image Url</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" />
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Edit Region</button>
            <button type="submit" class="btn btn-danger" asp-controller="Regions" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
        </div>

</form>
}